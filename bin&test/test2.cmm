/*	
 * Test control flow and its nests
 */
int a;
a = 4;
while(a <> 0)
{
	int j;
	j = a;
	while(j <> 0)	//	while语句内嵌套if语句
	{	if((j/2) <> 1)	//	j/2要加括号，因为在文法中定义的优先级里，关系运算符的优先级高于算数运算符的
			write(j);	//	条件判断后可跟单条语句，不需要大括号
		j = j-1;	
	}
	if( a < 2)
	{	if (1 == a)	//	if-else嵌套if，条件判断后可跟复合语句块
			write(j);	//	j为0
		write(a);
	}
	else
		write(a+3);
	a = a -1;
}
