/*	测试文件说明：
*	主题：read函数，算数运算符与关系运算符的相关测试
*	内容：基本的算数运算和关系运算；
*		 bool类型的变量的使用；
*		 混合的算数运算与关系运算；
*/

bool test;	//	bool类型的变量只要非0就被当成TRUE
test = 4;	//	bool类型的变量在赋值和运算时可以当作int类型使用，此规则继承于C语言
int a_b;
a_b = 5;
if((test-a_b) < 0)
{	read(a_b);		//	通过输入为变量a_b赋值
	write(a_b + 1);	//	查看是否正确读入，顺便测试加法运算
}
a_b = 5;
real c;
real d;
c = test / a_b;		//	测试除法运算
d = c / 0;			//	测试除0报错
write(c);			//	output:0.8000;
c = 2.5;
real mix;
mix = a_b + 1.3 - c * test;	//	混合运算，测试运算符优先级
write(mix);			/*	output:-4.0000
					 *	之所以不是-3.7000，是因为在赋值符右边的表达式里有整型值参与了运算，
					 *	实际上，右边的表达式的类型是整型。
					 */
mix = (a_b -c)*test;		//混合运算
write(mix);			//	output:10.0000
